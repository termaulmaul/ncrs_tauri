{
  "identifier": "desktop-capability",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "updater:default",
    "store:default",
    "autostart:default",
    "opener:default",
    "autostart:default",
    "log:default",
		"core:window:allow-toggle-maximize",
		"fs:allow-download-write-recursive",
		"fs:allow-write-file",
		"fs:allow-read-dir",
		"fs:allow-mkdir",
		{ "identifier": "fs:scope", "allow": ["$DOCUMENT/*", "$DOWNLOAD/*", "$APP/*"] },
		"shell:allow-execute"
  ]
}
